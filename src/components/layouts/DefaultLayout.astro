---
export interface Props {
  title?: string;
}

const propTitle = Astro.props.title;
const title = propTitle
  ? `${propTitle} - 葦江音綺 Project`
  : "葦江音綺 Project";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <h1>{title}</h1>
  </body>
</html>
