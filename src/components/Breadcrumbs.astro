---
export interface Props {
  directories: {
    title: string;
    path?: string;
  }[]
}
---

<section>
  <ul class="breadcrumbs">
    {Astro.props.directories.map(d => <li>{d.path ? <a href={d.path}>{d.title}</a> : d.title}</li>)}
  </ul>
</section>

<style lang="scss">
  .breadcrumbs {
    margin: 0;
    margin-bottom: 10px;

    padding: 0;
    list-style: none;

    li {
      display: inline-block;
      padding-right: 24px;

      position: relative;

      &:after {
        position: absolute;
        display: inline-block;
        content: '';
        width: 6px;
        height: 6px;
        border-right: 2px solid var(--gray-color);
        border-bottom: 2px solid var(--gray-color);
        transform: rotate(-45deg);
        top: 8px;
        right: 10px;
      }
    }
  }
</style>
